datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TrendAnalysis {
  contentIdeas ContentIdea[]
  createdAt    DateTime      @default(now())
  id           String        @id @default(cuid())
  keywords     String?
  platform     String?
  updatedAt    DateTime      @updatedAt
}

model ContentIdea {
  createdAt       DateTime       @default(now())
  description     String?
  id              String         @id @default(cuid())
  scripts         Script[]
  title           String?
  trendAnalysis   TrendAnalysis? @relation(fields: [trendAnalysisId], references: [id])
  trendAnalysisId String?
  updatedAt       DateTime       @updatedAt
}

model Hook {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  scripts   Script[]
  text      String?
  updatedAt DateTime @updatedAt
}

model Script {
  content       String?
  contentIdea   ContentIdea? @relation(fields: [contentIdeaId], references: [id])
  contentIdeaId String?
  createdAt     DateTime     @default(now())
  hook          Hook?        @relation(fields: [hookId], references: [id])
  hookId        String?
  id            String       @id @default(cuid())
  updatedAt     DateTime     @updatedAt
}

model UserPreferences {
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  preferences Json?
  updatedAt   DateTime @updatedAt
  userId      String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
